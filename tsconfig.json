{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": ["src"]
}
