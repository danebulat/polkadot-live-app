{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES6",
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "paths": {
    "*": [
      "node_modules/*",
      "src/*"
    ],
  },
  "include": ["src"]
}
